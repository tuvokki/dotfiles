#this set of functions assumes that you can do: python manage.py blah in a djago project
function djangofunctions() {
	for i in [syncdb,shell,runserver,convertosouth,schemamigration,migrate]
		echo $i
}

function syncdb() {
	python manage.py syncdb
}
function shell() {
	python manage.py shell
}
function runserver() {
	python manage.py runserver
}
	
function convertosouth() {
        if [[ -z $1 ]]; then
		echo "Usage: convertosouth myapp"
        else
		python manage.py convert_to_south $1
        fi
}
function schemamigration() {
        if [[ -z $1 ]]; then
		echo "Usage: schemamigration myapp"
        else
		python manage.py schemamigration $1 --auto
        fi
}
function migrate() {
        if [[ -z $1 ]]; then
		echo "Usage: migrate myapp"
        else
		python manage.py migrate $1
        fi
}
